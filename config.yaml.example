# Semantic SEO Strategy Configuration

# Application Settings
app:
  name: "Semantic SEO Strategy"
  version: "0.1.0"
  debug: true
  log_level: "INFO"

# API Configuration
apis:
  openai:
    model: "gpt-4"
    temperature: 0.7
    max_tokens: 2000
  
  anthropic:
    model: "claude-3-sonnet-20240229"
    max_tokens: 2000
  
  google_nlp:
    model: "text-bison@001"
    confidence_threshold: 0.7

# Entity Extraction Settings
entity_extraction:
  spacy_model: "en_core_web_lg"
  confidence_threshold: 0.8
  entity_types:
    - "PERSON"
    - "ORG"
    - "GPE"
    - "PRODUCT"
    - "TECHNOLOGY"
    - "CONCEPT"

# Semantic Clustering
semantic_clustering:
  algorithm: "kmeans"
  n_clusters: 10
  min_cluster_size: 5
  similarity_threshold: 0.7

# Query Classification
query_classification:
  micro_intents:
    - "documentation"
    - "tutorial"
    - "comparison"
    - "troubleshooting"
    - "solution"
    - "reference"
  
  entity_types:
    - "product"
    - "technology"
    - "concept"
    - "use_case"

# Gap Analysis
gap_analysis:
  similarity_threshold: 0.6
  min_content_length: 500
  max_gap_score: 0.3

# Content Optimization
content_optimization:
  min_semantic_score: 0.7
  target_word_count: 2000
  max_heading_depth: 3

# Data Sources
data_sources:
  bigquery:
    project_id: "your-project-id"
    dataset: "semantic_seo"
  
  elasticsearch:
    hosts: ["localhost:9200"]
    index_prefix: "semantic_seo"
  
  google_search_console:
    site_url: "https://your-site.com"
    start_date: "2023-01-01"
    end_date: "2024-01-01"

# Monitoring
monitoring:
  enable_metrics: true
  metrics_port: 8000
  log_retention_days: 30